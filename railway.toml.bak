[build]
builder = "NIXPACKS"

[deploy]
startCommand = "npx ts-node flywheel.ts"
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 10

[[services]]
name = "flywheel"
rootDirectory = "/"
startCommand = "npx ts-node flywheel.ts"

[[services]]
name = "dashboard"
rootDirectory = "/dashboard"
startCommand = "npm start"
